
@{
    ViewBag.Title = "AddCategory";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

@model MvcBlog1.Areas.Admin.Models.DTO.CategoryVM
    
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Kategori Ekleme İşlemi
        <small>Preview</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Forms</a></li>
        <li class="active">General Elements</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    
    <div class="row">
        <!-- left column -->
        <div class="col-md-9">
            
            @Html.Partial("/Areas/Admin/Views/Shared/Partial/FormMessagesPart.cshtml")
            
            <!-- general form elements -->
            <div class="box box-primary">
               
                <!-- /.box-header -->
                <!-- form start -->
                @using (Html.BeginForm())
                {
                    <div class="box-body">
                        <div class="form-group">
                            @Html.LabelFor(x=>x.Name)
                            @Html.TextBoxFor(x => x.Name, new  { @class="form-control" , @placeholder="Kategori adı"})
                            @Html.ValidationMessageFor(x=>x.Name)
                           
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(x=>x.Description)
                            @Html.TextAreaFor(x=>x.Description, new {@class="form-control", @placeholder="Açıklama"})
                            @Html.ValidationMessageFor(x=>x.Description)
                           
                        </div>
                        
                    <!-- /.box-body -->
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Kayıt</button>
                    </div> 
                        </div>
                }
              
            </div>
            <!-- /.box -->
            <!-- /.box -->
        </div>
        <!--/.col (left) -->
        <!-- right column -->
       
        <!--/.col (right) -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->

